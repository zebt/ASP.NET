@model ASP.NET.ViewModels.FormularzKsiazki
@{
    ViewBag.Title = "FormularzKsiazki";
}

<h2>Dodaj nową książkę</h2>

@using (Html.BeginForm("Zapisz", "Ksiazki"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Ksiazka.Name)
        @Html.TextBoxFor(m => m.Ksiazka.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Ksiazka.GatunekId)
        @Html.DropDownListFor(m => m.Ksiazka.GatunekId, new SelectList(Model.Gatunki, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    
    @Html.HiddenFor(m => m.Ksiazka.Id)
    <button type="submit" class="btn btn-primary">Zapisz</button>
}